<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


    <!--        <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginBottom="@dimen/categoryTitle_margin"
                android:layout_marginLeft="@dimen/loginImageViewMarging_top"
                android:layout_marginTop="@dimen/loginImageViewMarging_top"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="@color/pageTitleColor"
                android:textSize="@dimen/sectiontitle_text_size"
                android:textStyle="normal" />-->

            <TextView
                android:id="@+id/contactFormTitle"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text=""
                android:layout_below="@+id/toolbar"
                android:textColor="@color/editTextColor"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/editTextColor"
                android:textSize="@dimen/editbox_text_size"
                />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/editTextColor"
                android:textSize="@dimen/editbox_text_size" />

            <EditText
                android:id="@+id/contact_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/editTextColor"
                android:textSize="@dimen/editbox_text_size" />

            <Button
                android:id="@+id/submit_cont"
                android:layout_width="@dimen/submitcontact_width"
                android:layout_height="@dimen/submitcontact_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_radious"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/buttonbg"
                android:textSize="@dimen/submitcontact_text_size" />
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
